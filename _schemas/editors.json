{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/EmilySeville7cfg/EmilySeville7cfg.github.io/blob/master/schemas/editors.json#",
    "description": "Shema for _data/editors.yml",
    "title": "editors",
    "type": "array",
    "items": {
        "title": "editor",
        "description": "An editor",
        "type": "object",
        "required": [
            "name",
            "version"
        ],
        "properties": {
            "name": {
                "description": "An editor name",
                "type": "string",
                "minLength": 1
            },
            "version": {
                "description": "An editor version",
                "type": "string",
                "examples": [
                    "latest"
                ]
            },
            "logo": {
                "description": "An editor logo",
                "type": "string",
                "minLength": 1
            },
            "visible": {
                "description": "Specify whether hide an editor or not",
                "type": "boolean",
                "default": true
            }
        },
        "additionalProperties": false
    }
}