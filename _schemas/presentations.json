{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/EmilySeville7cfg/EmilySeville7cfg.github.io/blob/master/schemas/presentations.json#",
    "description": "Shema for _data/presentations.yml",
    "title": "presentations",
    "type": "array",
    "items": {
        "title": "presentation",
        "description": "A presentation",
        "type": "object",
        "required": [
            "name",
            "url"
        ],
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "A presentation name",
                "type": "string",
                "minLength": 1
            },
            "url": {
                "description": "A presentation url",
                "type": "string",
                "minLength": 1
            },
            "visible": {
                "description": "Specify whether hide a presentation or not",
                "type": "boolean",
                "default": true
            }
        }
    }
}